
<body class="adults">
  <h1>Add your Child</h1>
  <%= render 'layouts/header' %>
      <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>
  
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@child) do |f| %>
        <%= f.label :name, "Child's Name" %>
        <%= f.text_field :name %>
  
        <%= f.hidden_field :parent_id, value: session[:parent_id] %>
  
        <%= f.submit "Create Your Child's Page", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
  <%= debug(params) if Rails.env.development? %>
</body>