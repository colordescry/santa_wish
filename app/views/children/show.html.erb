<body class="kids">
      <%= render 'layouts/header' %>
          <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <h1 class="kidshow"><i class="fas fa-gift"></i> Happy Holidays <%= @child.name %> <i class="fas fa-gift"></i></h1>

      
        <div class="row">
          <div class="col-md-6 col-md-offset-6">
            <h2>Add what present you want Santa to bring!</h2>
            <%= form_tag(child_search_path, remote: true, id: "search_wishlist") do %>
              <%= text_field_tag :search, params[:search] %>
              <%= submit_tag "Search", name: nil %>
            <% end %>
            <%= render 'results' %>
          </div>
        
        </div>
      
      <%#= debug(params) if Rails.env.development? %>
    
  </body>

