<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <h1>Welcome <%= @parent.name %></h1>
</div>

<div class="container-fluid">
  <strong><center> Linked Child Account </center></strong>
</div>

<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>Account Name</th>
        <th>Wishlist</th>
      </tr>
    </thead>
    <tbody>
      <% @child.each do |c| %>
        <tr>
          <td><%= c.name %></td>
          <td><%= link_to "show", "/children/#{c.id}" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="container">
  <%= button_to "Create a new child account", new_child_path, 
                                              class: "btn btn-primary" %>
</div>
